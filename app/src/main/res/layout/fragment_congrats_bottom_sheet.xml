<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".Fragment.CongratsBottomSheetFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/BackButtonCongrats"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@drawable/iconback"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="18dp"
            android:fontFamily="@font/yeon_sung_regular"
            android:text="Congrats \nYour Order Placed"
            android:textAlignment="center"
            android:textColor="@color/textColour"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:src="@drawable/congrats" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/GoHomeButton"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginTop="32dp"
            android:background="@drawable/goto_home_shape"
            android:text="Go Home"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/yeon_sung_regular"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</FrameLayout>